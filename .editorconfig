# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# TypeScript, JavaScript, JSON
[*.{ts,tsx,js,jsx,json,json5}]
indent_style = space
indent_size = 2

# Python
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

# Go
[*.go]
indent_style = tab
indent_size = 4

# YAML
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Shell scripts
[*.{sh,bash}]
indent_style = space
indent_size = 2

# PowerShell
[*.ps1]
indent_style = space
indent_size = 4

# Makefiles
[Makefile]
indent_style = tab

# Package files
[{package.json,package-lock.json,pnpm-lock.yaml}]
indent_style = space
indent_size = 2

