# Auto detect text files and perform LF normalization
* text=auto

# Source code
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.py text eol=lf
*.go text eol=lf
*.sh text eol=lf
*.bash text eol=lf

# Windows scripts
*.ps1 text eol=crlf
*.bat text eol=crlf
*.cmd text eol=crlf

# Configuration files
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.conf text eol=lf
*.config text eol=lf
*.xml text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf
*.rst text eol=lf

# Docker
Dockerfile text eol=lf
*.dockerignore text eol=lf

# Git
.gitignore text eol=lf
.gitattributes text eol=lf

# Archives (treat as binary)
*.zip binary
*.tar binary
*.gz binary
*.tgz binary
*.7z binary
*.rar binary

# Images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text eol=lf

# Fonts
*.woff binary
*.woff2 binary
*.ttf binary
*.otf binary
*.eot binary

# Executables
*.exe binary
*.dll binary
*.so binary
*.dylib binary

# Python
*.pyc binary
*.pyo binary
*.egg binary
*.whl binary

# Node
*.node binary

# Go
*.a binary

# Database
*.db binary
*.sqlite binary
*.sqlite3 binary

# Keys and certificates
*.key binary
*.pem binary
*.crt binary
*.p12 binary
*.pfx binary

# Linguist overrides for better language detection
*.ts linguist-language=TypeScript
*.go linguist-language=Go
*.py linguist-language=Python

# Export-ignore (don't include in archives)
.github/ export-ignore
.vscode/ export-ignore
.idea/ export-ignore
*.test.ts export-ignore
*.test.js export-ignore
test/ export-ignore
tests/ export-ignore
__tests__/ export-ignore
*.md export-ignore

